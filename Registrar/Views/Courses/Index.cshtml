@{
    Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Course>

<h1>Course Directory</h1>

@if (@Model.Count == 0)
{
    <h3>This university has no courses! Pathetic!</h3>
}


@foreach (Course course in Model)
{
    <ul>
        <li>@Html.ActionLink($"{course.CourseNumber} | {course.CourseName}", "Details", new { id = course.CourseId }) | </li>
        @using (Html.BeginForm())
        {
        <input type="submit" value="Delete" />
        }
    </ul>
}

<p>@Html.ActionLink("Add a new course", "Create")</p>